@model MoviesRental.Models.Customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

@if (Model.Name == null)
{
    <h3> There is no customers! </h3>
}

else
{
    <h3>@Model.Name</h3>

   
    <ul>
        @if (@Model.Birthdate.HasValue)
        {
            <li>Birthdate: @Model.Birthdate.Value.ToShortDateString()</li>

        }
        <li>MembershipType: @Model.MembershipType.Name</li>
    </ul>




}


