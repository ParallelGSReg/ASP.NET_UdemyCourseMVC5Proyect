@model MoviesRental.Models.Movie


@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

@if (Model.Name == null)
{
    <h3> There is no Movies in the Store! </h3>
}

else
{
    <h3>@Model.Name</h3>


    <ul>
        @if (@Model.Genre.Name.Any())
        {
            <li>Genre: @Model.Genre.Name</li>
        }
    <li>ReleaseDate: @Model.ReleaseDate.ToShortDateString()</li>
        <li>DateAdded: @Model.DateAdded.ToShortDateString()</li>
        <li>@Html.LabelFor(m => m.NumberInStock): @Model.NumberInStock</li>        
    </ul>




}